<launch>
 <arg name="rviz" value="false"/>
  <!-- Run the map server -->
 <arg name="map_file" default="$(find jackal_navigation)/maps/jackal_race.yaml"/>
 <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!--- Run AMCL -->
 <include file="$(find jackal_navigation)/launch/amcl.launch" />

  <!--- Run Move Base -->
 <include file="$(find jackal_navigation)/launch/move_base.launch" />
 <group if="$(arg rviz)">
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find jackal_navigation)/rviz/localization.rviz" />
 </group>
</launch>
